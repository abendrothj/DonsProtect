{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "DonsProtect",
  "version": "0.1.0",
  "identifier": "edu.usfca.donsprotect",
  "build": {
    "frontendDist": "../src",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "DonsProtect",
        "width": 420,
        "height": 560,
        "resizable": false,
        "visible": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "license": "MIT",
    "homepage": "https://github.com/jabendroth/DonsProtect",
    "copyright": "Jake Abendroth",
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "linux": {
      "deb": {
        "depends": ["openconnect"]
      },
      "rpm": {
        "depends": ["openconnect"]
      }
    }
  }
}
